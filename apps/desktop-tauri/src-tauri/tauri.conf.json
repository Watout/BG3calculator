{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "BG3calculator",
  "version": "0.1.0",
  "identifier": "com.parisquadrifolial.tauri-app",
  "build": {
    "beforeDevCommand": "pnpm --dir ../desktop-tauri dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --dir ../desktop-tauri build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "BG3calculator",
        "width": 1199,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
